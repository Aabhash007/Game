<table width="100%" border="0" cellspacing="0" cellpadding="1">
  <tr>
    <td colspan="2" valign="top" class="title"><strong>{name}</strong><br />&nbsp;</td>
  </tr>
  
  <tr>
    <td valign="top">
      <fieldset>
        <legend>Beschreibung</legend>
        <table border="0" cellspacing="0" cellpadding="3">
          <tr>
            <td>{description}&nbsp;</td>
          </tr>
        </table>
      </fieldset>
      
      <br />
      
      <fieldset>
        <legend>Maximale Stufe</legend>
        <table border="0" cellspacing="0" cellpadding="3">
          <tr>
            <td>{maximum}&nbsp;</td>
          </tr>
        </table>
      </fieldset>
      
      <br />
     
      <fieldset>
        <legend>Kosten</legend>
        <table border="0" cellspacing="0" cellpadding="5">
          <tmpl:RESOURCECOST>
           <tr><td><img src="%gfx%/resources/{dbFieldName}_icon.gif" alt="{name}" width="20" height="20" title="{name}" /> {amount} </td></tr>
          </tmpl:RESOURCECOST>
        </table>

        <br />

        <tmpl:MORECOSTS>
          <table border="0" cellspacing="0" cellpadding="5">
            <tmpl:MORECOST>
              <tr><td>{name}</td><td>{amount}</td></tr>
            </tmpl:MORECOST>
          </table>
        <br />
        </tmpl:MORECOSTS>

        <br />

        <table>
          <tr>
            <td><img src="templates/images/hourglass.gif" width="20" height="20" alt="" /></td>
            <td>{productionTime}</td>
          </tr>
        </table>

      </fieldset>

      <br />
      
      <fieldset>
        <legend>Vorraussetzungen</legend>
        <table border="0" cellspacing="0" cellpadding="3">
          <tmpl:DEPENDENCIES>
          <tr>
            <td><a href="index.php?modus={category}&amp;{category}ID={id}">{name}</a></td>
            <td>{level}</td>
          </tr>
          </tmpl:DEPENDENCIES>
        </table>
        &nbsp;
      </fieldset>
    </td>
    <td valign="top"><img src="%gfx%/buildings/{dbFieldName}_large.gif" alt="{name}" title="{name}" /></td>
  </tr>
</table>