{% extends "base.tmpl" %}
{% block title %}Einheiten Information{% endblock %}
{% block content %}
<table width="100%" border="0" cellspacing="0" cellpadding="1">
  <tr>
    <td colspan="2" valign="top" class="title"><strong>{{ name }}</strong><br />&nbsp;</td>
  </tr>

  <tr>
    <td valign="top">
      <fieldset>
        <legend>Beschreibung</legend>
        <table border="0" cellspacing="0" cellpadding="3">
          <tr>
            <td>{{ description|raw }}&nbsp;</td>
          </tr>
        </table>
      </fieldset>

      <fieldset>
        <legend>Kosten</legend>
        <table border="0" cellspacing="0" cellpadding="5">
          <tr>
          {% for item in resource_cost %}
           <tr><td><img src="{{ gfx }}/resources/{{ item.dbFieldName }}_icon.gif" alt="{{ item.name }}" width="20" height="20" title="{{ item.name }}" /> {{ item.amount }} </td></tr>
          {% endfor %}
          </tr>
        </table>

        <br />

        {% if more_cost %}
          <table border="0" cellspacing="0" cellpadding="5">
            {% for item in more_cost %}
              <tr><td>{{ item.name }}</td><td>{{ item.amount }}</td></tr>
            {% endfor %}
          </table>
        <br />
        {% endif %}

        <table>
          <tr>
            <td><img src="templates/images/hourglass.gif" width="20" height="20" alt="" /></td>
            <td>{{ productionTime }}</td>
          </tr>
        </table>

      </fieldset>

      <br />

      <fieldset>
        <legend>Eigenschaften</legend>
        <table border="0" cellspacing="0" cellpadding="3">
          <tr>
            <td>Fernangriffsschaden</td>
            <td>{{ rangeAttack }}</td>
          </tr>
          <tr>
            <td>Gebäudeschaden</td>
            <td>{{ arealAttack }}</td>
          </tr>
          <tr>
           <td>Getümmelschaden</td>
           <td>{{ attackRate }}</td>
          </tr>
          <tr>
           <td>Fernkampfwiderstand</td>
           <td>{{ rangedDefenseRate }}</td>
          </tr>
          <tr>
           <td>Nahkampfwiderstand</td>
           <td>{{ meleeDefenseRate }}</td>
          </tr>
          <tr>
           <td>Größe</td>
           <td>{{ size }}</td>
          </tr>
          <tr>
           <td>Knüppelpunkte</td>
           <td>{{ warpoints }}</td>
          </tr>
        </table>
      </fieldset>

      <br />

      <fieldset>
        <legend>Trefferwahrscheinlichkeiten</legend>
        <table border="0" cellspacing="0" cellpadding="3">
          <tr>
            <td>Normal</td>
            <td>{{ normalDamageProbabilit }} %</td>
          </tr>
          <tr>
            <td>Schwer</td>
            <td>{{ heavyDamageProbability }} %</td>
          </tr>
          <tr>
            <td>Kritisch</td>
            <td>{{ criticalDamageProbability }} %</td>
          </tr>
        </table>
      </fieldset>

      <br />

      <fieldset>
        <legend>Bewegungs - Eigenschaften</legend>
        <table border="0" cellspacing="0" cellpadding="3">
          <tr>
            <td>Tempo</td>
            <td>{{ movement_speed }}</td>
          </tr>
          <tr>
            <td>Proviant</td>
            <td>{{ movement_cost }}</td>
          </tr>
        </table>
      </fieldset>

      <br />

      <fieldset>
        <legend>Spionage - Eigenschaften</legend>
        <table border="0" cellspacing="0" cellpadding="3">
          <tr>
            <td>Spionageabwehr</td>
            <td>{{ antiSpyChance }}</td>
          </tr>
          <tr>
            <td>Spionagefertigkeit</td>
            <td>{{ spyChance }}</td>
          </tr>
          <tr>
           <td>Spionageklasse</td>
           <td>{{ spyValue }}</td>
          </tr>
          <tr>
           <td>Spionagequalität</td>
           <td>{{ spyQuality }}</td>
          </tr>
        </table>
      </fieldset>

      <br />

      <fieldset>
        <legend>Vorraussetzungen</legend>

        <table border="0" cellspacing="0" cellpadding="3">
          {% for item in dependencies %}
          <tr>
            <td><a href="index.php?modus={{ item.category }}&amp;{{ item.category }}ID={{ item.id }}">{{ item.name }}</a></td>
            <td>{{ item.level|raw }}</td>
          </tr>
          {% endfor %}
        </table>
        &nbsp;
      </fieldset>
    </td>
    <td valign="top"><img src="{{ gfx }}/units/{{ dbFieldName }}_large.gif" alt="{{ name }}" title="{{ name }}" /></td>
  </tr>
</table>

{% endblock %}